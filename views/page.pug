extends layout

block content
  div(id=page.id)
    if (page.showTitle !== false)
      h1= page.title
    hr
    p !{page.content}

    if (page.type == "slider")
      include includes/slider.pug
    else if (page.type == "contact")
      include includes/contact.pug
    else if (page.type == "badges")
      - var i = 0
      div.container
        each badge in page.badges 
          include includes/badges.pug
          - i = i + 1
    else if (page.type == "machines")
      - var m = 0
      each machine in machines
        include includes/machines.pug
        - m = m + 1